<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="shadow-sm border p-4 mb-4 bg-white rounded-lg">
      <p class="text-center mb-3 text-info"><i class="fas fa-user fa-7x"></i></p>
      <% include ./partials/messages %>
      <form action="/confirmpassword" method="POST">
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="New Password"
          />
        </div>
        <div class="form-group">
          <label for="cpassword">Confirm Password</label>
          <input
            type="password"
            id="cpassword"
            name="cpassword"
            class="form-control"
            placeholder="Confirm New Password"
          />
        </div>
        <input type="hidden" name="hash" value="<%=hash%>">
        <input type="hidden" name="email" value="<%=email%>">
        <button type="submit" class="btn btn-info btn-block">Reset Password</button>
      </form>
    </div>
  </div>
</div>
