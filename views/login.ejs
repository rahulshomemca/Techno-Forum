<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="shadow-sm border p-4 mb-4 bg-white rounded-lg">
      <p class="text-center mb-3 text-info"><i class="fas fa-user fa-7x"></i></p>
      <% include ./partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-info btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        Forgotten Password ? <a href="/forgotpassword" class="text-info">Reset</a>
      </p>
    </div>
  </div>
</div>
