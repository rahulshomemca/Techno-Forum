<div class="container pt-2">
    <div class="row mt-5">
        <div class="col-md-9 m-auto">
            <% include ./partials/messages %>
            <% if(typeof results != 'undefined'){ %> 
                <% results.forEach(function(result) { %>
                    <div class="shadow-sm border p-4 mb-3 bg-white text-info rounded-lg">
                        Q : <%= result.question%>
                            <span class="text-info">
                                <a href="/editreply/<%= result._id%>/<%=result.question_id%>" class="text-success"><i class="far fa-edit"></i></a>
                                <a href="/deletereply/<%= result._id%>/<%=result.question_id%>" class="text-danger pl-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </span>
                        <% if(result.answer.length > 0){ %>
                            <p class="text-info pt-2">Answer :</p>
                            <div class="bg-light p-4 border text-info"><%= result.answer%></div>
                        <% } %>
                        <% if(result.code.length > 0){ %>
                            <p class="text-info pt-2">Code :</p>
                            <pre class="bg-light p-4 border text-success"><%= result.code%></pre>
                        <% } %>
                    </div>
                <% }); %> 
            <% } %>
            <% if(results.length == 0){ %>
                <div class="shadow-sm p-4 mb-3 bg-white text-secondary rounded-lg">
                    <b>No Answer Given...</b>
                </div>
            <% } %>
        </div>
    </div>
</div>
    